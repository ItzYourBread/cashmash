<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Aviator | CashMash</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/aviator.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script>
        window.user = <%- JSON.stringify(user) %>;
    </script>
</head>
<body>
    <%- include('partials/header') %>
    <%- include('partials/gameLoader') %>

    <section class="aviator-section">
        <div class="game-container">
            
            <div class="game-header">
                <h2 class="neon-title">Aviator</h2>
                <div class="balance-pill">
                    <i class="fas fa-wallet"></i>
                    <span id="balance" data-raw-balance="<%= user.balance %>">
                        <%= formatBalance(user.balance) %>
                    </span>
                </div>
            </div>

            <div class="stage-wrapper">
                
                <div class="flight-area" id="flightArea">
                    
                    <div class="sunburst-container">
                        <div class="sunburst"></div>
                    </div>
                    <div class="grid-lines"></div>

                    <div class="center-display">
                        <div class="multiplier-huge" id="multiplierDisplay">1.00x</div>
                        <div class="status-text" id="gameStatusText">WAITING FOR NEXT ROUND</div>
                    </div>

                    <svg id="graph-svg" class="graph-svg"></svg>
                    <div class="plane" id="plane">
                        <div class="plane-img"></div>
                        <div class="exhaust-trail"></div>
                    </div>

                    <div class="progress-bar-container" id="progressBarContainer">
                        <div class="progress-bar" id="progressBar"></div>
                    </div>
                </div>

                <div class="hud-bar">
                    <div class="history-label">HISTORY</div>
                    <div class="history-ribbon" id="historyRibbon">
                        <!-- History items inserted here -->
                    </div>
                </div>
            </div>

            <div class="control-dock">
                <div class="settings-group">
                    <button id="openBetModalBtn" class="setting-trigger">
                        <span class="trigger-label">Bet Amount</span>
                        <span class="trigger-value" id="displayBetValue">$5</span>
                    </button>
                    
                    <button id="openAutoModalBtn" class="setting-trigger">
                        <span class="trigger-label">Auto Cashout</span>
                        <span class="trigger-value" id="displayAutoValue">OFF</span>
                    </button>
                </div>

                <button id="actionBtn" class="btn-action bet">
                    <div class="btn-content">
                        <span class="btn-text" id="btnText">PLACE BET</span>
                        <span class="btn-subtext" id="btnSubtext">Next Round</span>
                    </div>
                </button>
            </div>
        </div>
    </section>

    <div id="betModal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Wager Amount</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="input-wrapper">
                    <span class="currency-symbol">$</span>
                    <input type="number" id="modalBetInput" value="5" min="1">
                </div>
                <div class="chip-grid">
                    <button class="chip-btn" data-add="5">+5</button>
                    <button class="chip-btn" data-add="10">+10</button>
                    <button class="chip-btn" data-add="50">+50</button>
                    <button class="chip-btn" data-add="100">+100</button>
                    <button class="chip-btn action" id="halfBet">1/2</button>
                    <button class="chip-btn action" id="doubleBet">2x</button>
                    <button class="chip-btn action" id="maxBet">Max</button>
                </div>
                <button class="btn-confirm" id="confirmBet">Set Bet</button>
            </div>
        </div>
    </div>

    <div id="autoModal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Auto Cashout At</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <p class="modal-desc">Automatically cash out when the multiplier reaches this value.</p>
                <div class="input-wrapper">
                    <span class="currency-symbol">x</span>
                    <input type="number" id="modalAutoInput" value="2.00" step="0.10" min="1.01">
                </div>
                <div class="chip-grid three-col">
                    <button class="auto-btn" data-val="1.10">1.10x</button>
                    <button class="auto-btn" data-val="1.50">1.50x</button>
                    <button class="auto-btn" data-val="2.00">2.00x</button>
                    <button class="auto-btn" data-val="5.00">5.00x</button>
                    <button class="auto-btn" data-val="10.00">10.00x</button>
                    <button class="auto-btn action" id="disableAuto">Disable</button>
                </div>
                <button class="btn-confirm" id="confirmAuto">Set Auto Cashout</button>
            </div>
        </div>
    </div>

    <div id="popupMessage" class="popup-message"></div>

    <%- include('partials/footer') %>
    
    <script>window.DEBUG_AVIATOR = true;</script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/formatBalance.js"></script>
    <script src="/js/aviator.js"></script>
</body>
</html>