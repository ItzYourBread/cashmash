    <style>
        :root {
            --gold: #f5c542;
            --gold-light: #ffdb6e;
            --text-light: #fff;
            --text-dim: #cfcfcf;
            --bg-dark: #000;
        }

        body {
            background: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Poppins', sans-serif;
        }

        .about-hero {
            padding: 140px 20px 120px;
            text-align: center;
            background:
                radial-gradient(circle at center top, rgba(245, 197, 66, 0.12), transparent 70%),
                linear-gradient(to bottom, #020617, #000);
            position: relative;
            overflow: hidden;
        }

        .about-hero::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.06;
            background: url('/images/glow-pattern.png');
            background-size: cover;
        }

        .about-hero-content {
            position: relative;
            z-index: 3;
            animation: fadeUp 1s ease forwards;
        }

        .about-hero-content h1 {
            font-size: 3em;
            letter-spacing: 1px;
            font-weight: 700;
            text-shadow: 0 0 15px rgba(245, 197, 66, 0.3);
        }

        .about-hero-content h1 span {
            color: var(--gold);
            animation: goldGlow 3s ease-in-out infinite;
        }

        .about-hero-content p {
            max-width: 650px;
            margin: 18px auto 0;
            color: var(--text-dim);
            font-size: 1.15em;
            line-height: 1.6;
        }

        .about-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 80px 20px 120px;
        }

        .about-content {
            display: flex;
            flex-direction: column;
            gap: 60px;
        }

        .about-section h2 {
            font-size: 1.8em;
            margin-bottom: 15px;
            color: var(--gold);
            text-shadow: 0 0 10px rgba(245, 197, 66, 0.3);
        }

        .about-section p {
            color: var(--text-dim);
            line-height: 1.7;
            font-size: 1.05em;
            margin-bottom: 15px;
        }

        .about-section:last-child {
            margin-bottom: 0;
        }

        @keyframes goldGlow {

            0%,
            100% {
                text-shadow: 0 0 12px rgba(245, 197, 66, 0.4);
            }

            50% {
                text-shadow: 0 0 26px rgba(245, 197, 66, 0.9);
            }
        }

        @keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .about-hero-content h1 {
                font-size: 2.2em;
            }

            .about-container {
                padding: 60px 20px 100px;
            }
        }
    </style>
</head>

