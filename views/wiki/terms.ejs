    <meta property="og:url" content="https://cashmash.watchnsfw.com/wiki?search=terms" />
    <meta property="og:image" content="https://cashmash.watchnsfw.com/images/CashMash.png" />
    <meta property="og:site_name" content="CashMash" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="CashMash | Terms & Conditions" />
    <meta name="twitter:description" content="Detailed terms of service for CashMash users." />
    <meta name="twitter:image" content="https://cashmash.watchnsfw.com/images/CashMash.png" />

    <!-- Canonical -->
    <link rel="canonical" href="https://cashmash.watchnsfw.com/wiki?search=terms" />

    <!-- Structured Data -->
    <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Terms & Conditions",
    "url": "https://cashmash.watchnsfw.com/wiki?search=terms",
    "description": "Legal terms for CashMash."
  }
