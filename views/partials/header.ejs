<header class="navbar">
  <div class="navbar-left">
    <a href="/" class="logo">
      <img src="/images/CashMash.png" alt="CashMash Logo" class="logo-img" />
    </a>
  </div>

  <div class="navbar-right">
    <div class="language-selector desktop-lang">
      <span class="lang-current" id="langCurrent">
        <%= getLangName(currentLang) %> <i class="arrow-down"></i>
      </span>
      <div class="lang-dropdown" id="langDropdown">
        <a href="#" data-lang="en">English</a>
      </div>
    </div>

    <nav class="nav-links">
      <a href="/" class="nav-item <%= currentPage === '' ? 'active-link' : '' %>">
        Home
      </a>
      <a href="/games" class="nav-item <%= currentPage === 'games' ? 'active-link' : '' %>">
        Games
      </a>
      <a href="/leaderboard" class="nav-item <%= currentPage === 'leaderboard' ? 'active-link' : '' %>">
        Leaderboard
      </a>
      <a href="/deposit" class="nav-item <%= currentPage === 'deposit' ? 'active-link' : '' %>">
        Deposit
      </a>
      <a href="/withdraw" class="nav-item <%= currentPage === 'withdraw' ? 'active-link' : '' %>">
        Withdraw
      </a>
    </nav>

    <% if (user) { %>
      <div class="nav-buttons">
        <a href="/dashboard" class="btn btn-gold">
          Dashboard
        </a>
        <a href="/logout" class="btn btn-outline">
          Logout
        </a>
      </div>
      <% } else { %>
        <div class="nav-buttons">
          <a href="/login" class="btn btn-gold">
            Login
          </a>
          <a href="/register" class="btn btn-outline">
            Sign Up
          </a>
        </div>
        <% } %>

          <div class="menu-toggle" id="menuToggle">
            <span></span><span></span><span></span>
          </div>
  </div>
</header>

<div class="mobile-menu" id="mobileMenu">
  <nav>
    <a href="/" class="nav-item <%= currentPage === '' ? 'active-link' : '' %>">
      Home
    </a>
    <a href="/games" class="nav-item <%= currentPage === 'games' ? 'active-link' : '' %>">
      Games
    </a>
    <a href="/leaderboard" class="nav-item <%= currentPage === 'leaderboard' ? 'active-link' : '' %>">
      Leaderboard
    </a>
    <a href="/deposit" class="nav-item <%= currentPage === 'deposit' ? 'active-link' : '' %>">
      Deposit
    </a>
    <a href="/withdraw" class="nav-item <%= currentPage === 'withdraw' ? 'active-link' : '' %>">
      Withdraw
    </a>
    <% if (user) { %>
      <a href="/dashboard" class="nav-item <%= currentPage === 'dashboard' ? 'active-link' : '' %>">
        Dashboard
      </a>
      <a href="/logout" class="nav-item">
        Logout
      </a>
      <% } else { %>
        <a href="/login" class="nav-item <%= currentPage === 'login' ? 'active-link' : '' %>">
          Login
        </a>
        <a href="/register" class="nav-item <%= currentPage === 'register' ? 'active-link' : '' %>">
          Sign Up
        </a>
        <% } %>
  </nav>
</div>

<script src="/js/header.js"></script>