<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Boxes | CashMash</title>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/boxes.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <link rel="icon" type="image/png" href="/favicons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="CashMash" />
</head>

<body>
    <%- include('partials/header') %>
        <%- include('partials/gameLoader') %>

            <section class="boxes-section">
                <div class="game-container">

                    <div class="game-header">
                        <h2 class="neon-title">Boxes</h2>
                        <div class="balance-pill">
                            <i class="fas fa-dollar-sign"></i>
                            <span id="balance" data-raw-balance="<%= user.balance %>">
                                <%= formatBalance(user.balance) %>
                            </span>
                        </div>
                    </div>

                    <div class="grid-wrapper">
                        <div id="pyramid" class="pyramid locked" aria-live="polite"></div>

                        <div class="hud-bar">
                            <div class="hud-item">
                                <span class="label">Multiplier</span>
                                <span class="value" id="multiplierDisplay">1.00x</span>
                            </div>
                            <div class="hud-divider"></div>
                            <div class="hud-item">
                                <span class="label">Profit</span>
                                <span class="value highlight" id="profitDisplay">0.00</span>
                            </div>
                        </div>
                    </div>

                    <div class="control-dock">
                        <div class="settings-group">
                            <button id="openBetModalBtn" class="setting-trigger">
                                <span class="trigger-label">Bet Amount</span>
                                <span class="trigger-value" id="displayBetValue">$1.00</span>
                            </button>

                            <button id="openTrapModalBtn" class="setting-trigger">
                                <span class="trigger-label">Traps</span>
                                <span class="trigger-value" id="displayTrapCount">3</span>
                            </button>
                        </div>

                        <button id="actionBtn" class="btn-action start">
                            <span class="btn-text">Start Game</span>
                            <span class="btn-subtext" id="btnSubtext">Press to Play</span>
                        </button>
                    </div>
                </div>
            </section>

            <div id="betModal" class="modal-overlay">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Set Bet Amount</h3>
                        <button class="close-modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="input-wrapper">
                            <span class="currency-symbol">$</span>
                            <input type="number" id="modalBetInput" value="1" min="1" max="100">
                        </div>
                        <div class="chip-grid">
                            <button class="chip-btn" data-add="10">+10</button>
                            <button class="chip-btn" data-add="25">+25</button>
                            <button class="chip-btn" data-add="50">+50</button>
                            <button class="chip-btn action" id="halfBet">1/2</button>
                            <button class="chip-btn action" id="doubleBet">2x</button>
                            <button class="chip-btn action" id="maxBet">Max</button>
                        </div>
                        <button class="btn-confirm" id="confirmBet">Confirm</button>
                    </div>
                </div>
            </div>

            <div id="trapModal" class="modal-overlay">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Select Traps</h3>
                        <button class="close-modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="traps-grid">
                            <button class="trap-option" data-val="3">3</button>
                            <button class="trap-option" data-val="4">4</button>
                            <button class="trap-option" data-val="5">5</button>
                            <button class="trap-option" data-val="6">6</button>
                        </div>
                        <button class="btn-confirm" id="confirmTraps">Confirm</button>
                    </div>
                </div>
            </div>

            <div id="popupMessage" class="popup-message"></div>

            <%- include('partials/footer') %>

                <script src="/socket.io/socket.io.js"></script>
                <script src="/js/formatBalance.js"></script>
                <script src="/js/boxes.js"></script>
</body>

</html>