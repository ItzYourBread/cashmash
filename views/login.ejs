<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | CashMash</title> 
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/auth.css" />
  <style>
    .hidden { display: none; }
  </style>
</head>

<body>
  <%- include('partials/header') %>

  <section class="auth-section">
    <form id="loginForm" class="auth-form" novalidate>
      <h2>Login to CashMash</h2>

      <div id="step-login">
        <input type="text" name="identifier" id="identifier" placeholder="Email or Username" required /> 
        <input type="password" name="password" id="password" placeholder="Password" required /> 
        <button type="submit">Login</button>
      </div>

      <div id="step-otp" class="hidden">
        <p class="auth-message">
          A new device was detected.<br />
          Please check your email for a 6-digit OTP.
        </p>
        <input type="text" id="otp" name="otp" placeholder="Enter 6-digit OTP" maxlength="6" pattern="[0-9]{6}" inputmode="numeric" /> 
        <button type="button" id="verifyOtpBtn">Verify OTP</button> 
      </div>

      <p id="responseMsg"></p>
      <p>
        Don't have an account? 
        <a href="/register">Sign Up</a> 
      </p>
    </form>
  </section>

  <%- include('partials/footer') %>

  <script>
    const otpEnable = true; // set to false to disable OTP completely

    const loginForm = document.getElementById('loginForm');
    const stepLogin = document.getElementById('step-login');
    const stepOtp = document.getElementById('step-otp');
    const otpInput = document.getElementById('otp');
    const responseMsg = document.getElementById('responseMsg');
    const verifyOtpBtn = document.getElementById('verifyOtpBtn');
    const loginBtn = stepLogin.querySelector('button[type="submit"]');

    // Static messages replacing the MSGS object 
    const MSGS = {
      otpSent: 'OTP sent to your email.',
      loginFailed: 'Login failed.',
      otpRequired: 'Please enter the OTP.',
      loginSuccessful: 'Login successful!',
      invalidOtp: 'Invalid OTP.'
    };

    // Login step
    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      responseMsg.textContent = '';
      loginBtn.disabled = true;
      loginBtn.textContent = 'Checking...';
      loginBtn.style.opacity = '0.6';

      const identifier = document.getElementById('identifier').value.trim();
      const password = document.getElementById('password').value.trim();

      otpInput.removeAttribute('required');

      try {
        const res = await fetch('/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ identifier, password, otpEnable })
        });

        const data = await res.json().catch(() => ({}));

        if (res.ok && data.otpRequired) {
          stepLogin.classList.add('hidden');
          stepOtp.classList.remove('hidden');
          otpInput.setAttribute('required', 'true');
          responseMsg.textContent = MSGS.otpSent;
          responseMsg.style.color = '#f5c542';
        } else if (res.ok && data.otpRequired === false) {
          window.location.href = '/dashboard';
        } else {
          responseMsg.textContent = data.message || MSGS.loginFailed;
          responseMsg.style.color = 'red';
        }
      } catch (err) {
        responseMsg.textContent = 'Network issue, please try again.';
        responseMsg.style.color = 'red';
      }

      // Re-enable login button after delay
      setTimeout(() => {
        // Replaced <%= __("Login") %>
        loginBtn.disabled = false;
        loginBtn.textContent = 'Login'; 
        loginBtn.style.opacity = '1';
      }, 1500);
    });

    // OTP verification
    verifyOtpBtn.addEventListener('click', async () => {
      responseMsg.textContent = '';

      const identifier = document.getElementById('identifier').value.trim();
      const otp = otpInput.value.trim();

      if (!otp) {
        responseMsg.textContent = MSGS.otpRequired;
        responseMsg.style.color = 'red';
        return;
      }

      verifyOtpBtn.disabled = true;
      verifyOtpBtn.textContent = 'Verifying...';
      verifyOtpBtn.style.opacity = '0.6';

      try {
        const res = await fetch('/verify-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ identifier, otp })
        });

        const data = await res.text();

        if (res.ok) {
          responseMsg.textContent = MSGS.loginSuccessful;
          responseMsg.style.color = '#f5c542';
          setTimeout(() => window.location.href = '/dashboard', 800);
        } else {
          responseMsg.textContent = data || MSGS.invalidOtp;
          responseMsg.style.color = 'red';
        }
      } catch (err) {
        responseMsg.textContent = 'Connection error, try again.';
        responseMsg.style.color = 'red';
      }

      setTimeout(() => {
        // Replaced <%= __("Verify OTP") %>
        verifyOtpBtn.disabled = false;
        verifyOtpBtn.textContent = 'Verify OTP'; 
        verifyOtpBtn.style.opacity = '1';
      }, 1500);
    });
  </script>
</body>

</html>