<!DOCTYPE html>
<html lang="<%= currentLang %>">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= __('Register Title') %> | CashMash
  </title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/auth.css" />
  <style>
    .availability-msg {
      font-size: 0.9em;
      margin-top: -6px;
      margin-bottom: 8px;
      color: #ccc;
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>

    <section class="auth-section">
      <form id="registerForm" class="auth-form" novalidate>
        <h2>
          <%= __('Create Your Account') %>
        </h2>

        <!-- Username -->
        <input type="text" name="username" id="username" placeholder="<%= __('Username') %>" required />
        <p id="usernameMsg" class="availability-msg"></p>

        <!-- Email -->
        <input type="email" name="email" id="email" placeholder="<%= __('Email') %>" required />

        <!-- Phone -->
        <input type="tel" name="phone" id="phone" placeholder="<%= __('Phone Number (optional)') %>" />

        <!-- Password -->
        <input type="password" name="password" id="password" placeholder="<%= __('Password') %>" required />

        <button type="submit" class="btn gold big">
          <%= __('Register') %>
        </button>

        <p>
          <%= __('Already have an account?') %>
            <a href="/login">
              <%= __('Login') %>
            </a>
        </p>
        <p id="responseMsg"></p>
      </form>
    </section>

    <%- include('partials/footer') %>

      <script>
        const registerForm = document.getElementById('registerForm');
        const usernameInput = document.getElementById('username');
        const usernameMsg = document.getElementById('usernameMsg');
        const responseMsg = document.getElementById('responseMsg');

        let usernameTimer = null;

        // ðŸ”¹ Auto-lowercase username and check availability
        usernameInput.addEventListener('input', () => {
          const val = usernameInput.value.toLowerCase().trim();
          usernameInput.value = val;

          if (val.length < 3) {
            usernameMsg.textContent = '';
            return;
          }

          clearTimeout(usernameTimer);
          usernameTimer = setTimeout(async () => {
            try {
              const res = await fetch(`/check-username?username=${encodeURIComponent(val)}`);
              const data = await res.json();

              if (data.available) {
                usernameMsg.textContent = '<%= __("Username available") %>';
                usernameMsg.style.color = '#4CAF50';
                usernameMsg.style.marginTop = '5px';
                usernameMsg.style.marginLeft = '5px';
                usernameMsg.style.textAlign = 'left';
              } else {
                usernameMsg.textContent = '<%= __("Username already taken") %>';
                usernameMsg.style.color = 'red';
                usernameMsg.style.marginTop = '5px';
                usernameMsg.style.marginLeft = '5px';
                usernameMsg.style.textAlign = 'left';
              }
            } catch (err) {
              console.error(err);
              usernameMsg.textContent = '<%= __("Error checking username") %>';
              usernameMsg.style.color = 'red';
              usernameMsg.style.marginTop = '5px';
              usernameMsg.style.marginLeft = '5px';
              usernameMsg.style.textAlign = 'left';
            }
          }, 400); // wait for user to stop typing
        });

        // ðŸ”¹ Form submit
        registerForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          responseMsg.textContent = '';

          const username = usernameInput.value.trim();
          const email = document.getElementById('email').value.trim();
          const phone = document.getElementById('phone').value.trim();
          const password = document.getElementById('password').value.trim();

          // Validation: username
          if (username.length < 3) {
            responseMsg.textContent = '<%= __("Username must be at least 3 characters") %>';
            responseMsg.style.color = 'red';
            return;
          }

          // Validation: password length
          if (password.length < 6) {
            responseMsg.textContent = '<%= __("Password must be at least 6 characters long") %>';
            responseMsg.style.color = 'red';
            return;
          }

          // Optional phone check (any country)
          if (phone && !/^\+?[0-9]{6,15}$/.test(phone)) {
            responseMsg.textContent = '<%= __("Phone validation error") %>';
            responseMsg.style.color = 'red';
            return;
          }

          try {
            const res = await fetch('/register', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ username, email, phone, password })
            });

            const data = await res.json().catch(() => ({}));

            if (res.ok) {
              responseMsg.textContent = data.message || '<%= __("Registration successful!") %>';
              responseMsg.style.color = '#f5c542';
              setTimeout(() => { window.location.href = '/login'; }, 1200);
            } else {
              responseMsg.textContent = data.message || '<%= __("Registration failed.") %>';
              responseMsg.style.color = 'red';
            }
          } catch (err) {
            console.error(err);
            responseMsg.textContent = '<%= __("Something went wrong.") %>';
            responseMsg.style.color = 'red';
          }
        });
      </script>
</body>

</html>